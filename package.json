{
  "name": "@processmaker/vue-form-elements",
  "version": "0.2.4",
  "description": "Reusable VueJS Based Form Elements styled with Bootstrap 4",
  "keywords": [
    "html",
    "vuejs",
    "form"
  ],
  "homepage": "https://www.github.com/processmaker/vue-form-elements",
  "bugs": {
    "url": "https://github.com/processmaker/vue-form-elements/issues"
  },
  "license": "MIT",
  "main": "./dist/vue-form-elements.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-bundle": "vue-cli-service build --target lib --name vue-form-elements ./src/components/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "v-calendar": "^0.9.7",
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4",
    "validatorjs": "^3.14.2",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.3",
    "vue-template-compiler": "^2.5.16",
    "vue-uniq-ids": "^1.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
