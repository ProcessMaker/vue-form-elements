{
  "name": "@processmaker/vue-form-elements",
  "version": "0.19.1",
  "description": "Reusable VueJS Based Form Elements styled with Bootstrap 4",
  "scripts": {
    "serve": "NODE_ENV=standalone vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build-bundle": "vue-cli-service build --target lib --name vue-form-elements ./src/components/index.js",
    "build-watch": "vue-cli-service build --target lib --name vue-form-elements --watch ./src/components/index.js"
  },
  "main": "./dist/vue-form-elements.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "@tinymce/tinymce-vue": "2.0.0",
    "bootstrap": "^4.5.3",
    "jquery": "^3.5.1",
    "luxon": "^1.11.3",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.26",
    "popper.js": "^1.14.4",
    "tinymce": "5.2.2",
    "v-calendar": "^0.9.7",
    "validatorjs": "^3.14.2",
    "vue": "^2.6.12",
    "vue-bootstrap-datetimepicker": "^5.0.1",
    "weekstart": "^1.0.0"
  },
  "devDependencies": {
    "@panter/vue-i18next": "^0.15.0",
    "@types/jest": "^24.0.18",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "i18next": "^15.1.1",
    "mustache": "^3.0.1",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.3",
    "vue-multiselect": "^2.1.6",
    "vue-template-compiler": "^2.6.12",
    "vue-uniq-ids": "^1.0.0"
  },
  "peerDependencies": {
    "mustache": "^3.0.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/processmaker/vue-form-elements/issues"
  },
  "homepage": "https://www.github.com/processmaker/vue-form-elements",
  "keywords": [
    "html",
    "vuejs",
    "form"
  ],
  "license": "MIT"
}
